// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"isBackground": true,
			"type": "shell",
			"icon": {
				"color": "terminal.ansiCyan",
				"id": "gear"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"command": "npm run watch",
			"label": "Workspace TypeScript watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build"
		},
		{
			"isBackground": true,
			"type": "shell",
			"icon": {
				"color": "terminal.ansiGreen",
				"id": "gear"
			},
			"options": {
				"cwd": "${workspaceFolder}/packages/vscode-messenger-devtools"
			},
			"command": "npm run watch",
			"label": "Devtools watch",
			"problemMatcher": [
				{
					"base": "$esbuild-watch",
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^Starting esbuild in watch mode",
						"endsPattern": "^Watching for changes"
					}
				}
			],
			"group": "build"
		},
		{
			"isBackground": true,
			"type": "shell",
			"icon": {
				"color": "terminal.ansiMagenta",
				"id": "gear"
			},
			"options": {
				"cwd": "${workspaceFolder}/packages/vscode-messenger-devtools/webview-ui"
			},
			"command": "npm run watch",
			"label": "Devtools Webview watch",
			"problemMatcher": [
				{
					"base": "$tsc-watch",
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^.*tsc.*-w.*|^.*vite.*",
						"endsPattern": "^.*Found 0 errors.*Watching for file changes.*|^.*ready in.*|^.*Local:.*"
					}
				}
			],
			"group": "build"
		},
		{
			"label": "Watch All",
			"dependsOrder": "parallel",
			"dependsOn": [
				"Workspace TypeScript watch",
				"Devtools watch",
				"Devtools Webview watch"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}